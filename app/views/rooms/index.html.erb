<%- model_class = Room -%>
<div class="span3"></div>

<div class="span6">

  <div class="page-header">
    <h1>Roomを選択</h1>
  </div>
  <table class="table table-striped">
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= link_to "質問する", new_room_question_path( room.id ) %></td>
        <td><%= link_to "質問の一覧を見る", room_questions_path( room.id ) %></td>
      </tr>
    <% end %>
  </table>

</div>

<div class="span3"></div>
