<%= form_for [@room, @question], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <div class="controls">
      <%= f.text_field :nickname, :class => 'text_field',:placeholder => "（必須）ニックネーム" %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.text_area :content, :class => 'text_area',:placeholder => "（必須）質問内容", :size=>"60x10" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit '質問する', :class => 'btn btn-primary' %>
  </div>
<% end %>
