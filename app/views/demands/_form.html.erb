<%= form_for @demand, remote: true, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <div class="controls">
      <%= f.text_area :content, :class => 'text_area',:placeholder => "（必須）ご要望", :size=>"30x10" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit '登録する', :class => 'btn btn-primary' %>
  </div>
<% end %>
