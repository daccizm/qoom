<div class="login-unit">
  <h4>新しくアカウントを登録しませんか？</h4>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="control-group">
      <div class="controls">
  	    <%= f.text_field :account, :placeholder => "新しいアカウント" %><br/>
		<%= f.password_field :password, :placeholder => "パスワード" %><br/>
		<%= f.password_field :password_confirmation, :placeholder => "パスワード（確認用）" %>
	  </div>
	</div>

    <%= f.submit "アカウントを登録", :class => 'btn btn-inverse'  %>
  <% end %>
</div>
